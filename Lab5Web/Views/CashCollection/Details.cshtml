@model Lab5Web.Models.CashCollection

@{
    ViewData["Title"] = "Просмотр записи";
}

<h1>Просмотр записи</h1>

<div>
    <h4>Данные инкассации</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.LabelFor(model => model.RouteNumber)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.RouteNumber)
        </dd>

        <dt class="col-sm-4">
            @Html.LabelFor(model => model.CollectorName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CollectorName)
        </dd>

        <dt class="col-sm-4">
            @Html.LabelFor(model => model.Amount)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt class="col-sm-4">
            @Html.LabelFor(model => model.CollectionDateTime)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CollectionDateTime)
        </dd>

        <dt class="col-sm-4">
            @Html.LabelFor(model => model.IsCompleted)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.IsCompleted)
        </dd>

        <dt class="col-sm-4">
            @Html.LabelFor(model => model.Notes)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>

<div class="mt-3">
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.RouteNumber }) |
    <a asp-action="Index">Назад к списку</a>
</div>